        <servlet-name>AgendamentoServlet</servlet-name>
        <url-pattern>/AgendamentoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FuncionarioServlet</servlet-name>
        <url-pattern>/FuncionarioServlet</url-pattern>
    </servlet-mapping>
